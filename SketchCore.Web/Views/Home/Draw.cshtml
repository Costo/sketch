@model  DrawViewModel
@{
    ViewData["Title"] = "Draw";
}

<div class="img-container" style='background: url(@Model.ImageUrl) 50% 50% no-repeat; background-size: contain'></div>
@section footer {
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                @using (Html.BeginForm("Replace", "Home"))
                {
                    <button type="submit" class='btn btn-default'><span class='glyphicon glyphicon-refresh'></span> Not now</button>
                }
            </div>
            <div class="col-md-2">
                @using (Html.BeginForm("Ban", "Home"))
                {
                    <button type="submit" class='btn btn-danger'><span class='glyphicon glyphicon-trash'></span> Never again</button>
                }
            </div>
            <div class="col-md-1">
                <p ng-init='timeLeft = @Model.Duration.TotalMilliseconds; nextPageUrl = "@Model.Next"' ng-controller='TimerCtrl'>
                    <span>{{minutes}}</span>:<span>{{seconds}}</span>
                </p>
            </div>

            <div class="col-md-2">
                <p>Photo @(Model.PhotoIndex + 1)/@Model.PhotoCount</p>
            </div>
            <div class="col-md-5">
                <div class="progress">
                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: @Model.Progress%">
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

}
@section Scripts {
<script>

        resizePhoto();
        $(window).on('resize', resizePhoto);

        function resizePhoto() {
            $('.img-container').height($(window).height() - $('header').height() - $('footer').height());
        }
</script>

}

